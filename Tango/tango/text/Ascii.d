/******************************************************************************

        Convert в_ lowercase. Returns the преобразованый контент in приёмн,
        performing an in-place conversion if приёмн is пусто

******************************************************************************/

ткст toLower (ткст ист, ткст приёмн = пусто)
{
        if (приёмн.ptr)
           {
           assert (приёмн.length >= ист.length);
           приёмн[0 .. ист.length] = ист [0 .. $];
           }
        else
           приёмн = ист;
        
        foreach (ref c; приёмн)
                 if (c>= 'A' && c <= 'Z')
                     c = cast(сим)(c + 32);
        return приёмн [0  .. ист.length];
}

/******************************************************************************

        Convert в_ uppercase. Returns the преобразованый контент in приёмн,
        performing an in-place conversion if приёмн is пусто

******************************************************************************/

ткст toUpper (ткст ист, ткст приёмн = пусто)
{
        if (приёмн.ptr)
           {
           assert (приёмн.length >= ист.length);
           приёмн[0 .. ист.length] = ист [0 .. $];
           }
        else
           приёмн = ист;
        
        foreach (ref c; приёмн)
                 if (c>= 'a' && c <= 'z')
                     c = cast(сим)(c - 32);
        return приёмн[0 .. ист.length];
}

/******************************************************************************

        Compare two ткст ignoring case. Returns 0 if equal
        
******************************************************************************/

цел icompare (ткст s1, ткст s2)
{
        auto длин = s1.length;
        if (s2.length < длин)
            длин = s2.length;

        auto результат = memicmp (s1.ptr, s2.ptr, длин);

        if (результат is 0)
            результат = s1.length - s2.length;
        return результат;
}


/******************************************************************************

        Compare two ткст with case. Returns 0 if equal
        
******************************************************************************/

цел compare (ткст s1, ткст s2)
{
        auto длин = s1.length;
        if (s2.length < длин)
            длин = s2.length;

        auto результат = memcmp (s1.ptr, s2.ptr, длин);

        if (результат is 0)
            результат = s1.length - s2.length;
        return результат;
}



