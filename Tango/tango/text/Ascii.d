                '\370','\371','\372','\373','\374','\375','\376','\377',
                ];  


        assert(ист.ptr);
        assert(образец.ptr);

        for (цел i1=0, i2; i1 <= cast(цел)(ист.length - образец.length); ++i1)
            {   
            for (i2=0; i2 < образец.length; ++i2)
                 if (_caseMap[ист[i1 + i2]] != _caseMap[образец[i2]])
                     break;

            if (i2 is образец.length)
                return i1;
            }   
        return ист.length;
}



